<header id="header-main" class="navbar-default" role="navigation">
  <div class="container">
    <div class="row">

      <div class="navbar-header" alt="Comunidade de Práticas">
        <!-- Logo -->
        {{#link-to 'home' classNames="app-main-logo navbar-brand"}}
          {{partial 'partials/logo-cdp'}}
        {{/link-to}}
        <!-- /Logo -->
      </div>

      <!-- Toggle button
          for mobile devices -->
      <button class="toggle-button navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <!-- /Toggle button -->





    <div id="search-main" class="search">
      <form class="form-inline" role="form">
        <div class="input-group">
          <input type="search" class="search-input form-control" placeholder="O que você procura?">
          <span class="input-group-btn">
            <button class="btn btn-default" type="button">
              <i class="fa fa-search"></i>
            </button>
          </span>
        </div>
      </form>
    </div>

    <!-- Menu User #menu-user-dropdown
         only on login -->
    <ul class="login-menu-dropdown">
      {{#unless isAuthenticated}}
        <li id="menu-user-dropdown" class="dropdown">
          <button class="btn btn-link navbar-login-button navbar-btn dropdown-toggle" data-toggle="dropdown">
            {{t "Entrar"}} <i class="fa fa-caret-down"></i>
          </button>
          <ul id="dropdown-login-menu" class="dropdown-menu dropdown-menu-right arrow_box" role="menu">
            <!-- FORM LOGIN -->
            {{we-auth-modal-login}}
            <!-- /FORM LOGIN -->
          </ul>
        </li>

      {{/unless}}

      {{render 'user/usermenu' App.currentUser controller='UserMenu'}}
    </ul>
    <!-- /Menu User -->

    <div class="bar-colored"></div>
    
    <!-- Menu main -->
    <nav id="menu-main" class="nav navbar-nav navbar-collapse collapse">
      <li class="navbar-menu-item item-people">
        {{#link-to 'users' classNames=""}}
          <i class="cdp cdp-people cdp-2x"></i>
          <div class="text-menu">{{t 'Pessoas'}}</div>
        {{/link-to}}
      </li>
      <li class="navbar-menu-item item-group">
        {{#link-to 'groups' classNames=""}}
          <i class="cdp cdp-cdp-logo cdp-2x"></i>
          <div class="text-menu">{{t 'Comunidades'}}</div>
        {{/link-to}}
      </li>
      <li class="navbar-menu-item item-course">
        <a href="#">
          <i class="cdp cdp-badge cdp-2x"></i>
          <div class="text-menu">{{t 'Cursos'}}</div>
        </a>
      </li>

      <li class="navbar-menu-item item-feed">
        <a href="#">
          <i class="cdp cdp-message cdp-2x"></i>
          <div class="text-menu">{{t 'Mensagens'}}</div>
        </a>
      </li>
      <li class="navbar-menu-item item-notifications">
        {{#link-to 'notifications' classNames=""}}
          <i class="cdp cdp-bell cdp-2x cdp-align-justify"></i>
          <div class="text-menu">{{t 'Notificações'}}</div>
        {{/link-to}}
      </li>
    </nav>
    <!-- /Menu main -->

    </div><!-- /row -->
  </div><!-- end container -->
</header><!-- end navigation #navbarmain -->
