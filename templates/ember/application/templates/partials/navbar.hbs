<nav id="navbar-main" class="navbar-default" role="navigation">
  <div class="container">

    <div class="navbar-header">
      <!-- Toggle button
          for mobile devices -->
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <!-- /Toggle button -->

      <!-- Logo -->
      {{#link-to 'home' classNames="app-main-logo navbar-brand"}}
        {{partial 'partials/logo-cdp'}}
      {{/link-to}}
      <!-- /Logo -->
    </div>

    <!-- Menu main -->
    <ul id="menu-main" class="nav navbar-nav">
      <li>
        {{#link-to 'users' classNames="navbar-menu-item item-people"}}
          <i class="cdp cdp-people cdp-2x"></i>
          <span class="text-menu">{{t 'Pessoas'}}</span>
        {{/link-to}}
      </li>
      <li>
        {{#link-to 'groups' classNames="navbar-menu-item item-group"}}
          <i class="cdp cdp-cdp-logo cdp-2x"></i>
          <span class="text-menu">{{t 'Comunidades'}}</span>
        {{/link-to}}
      </li>
      <li>
        <a class="navbar-menu-item item-course" href="#">
          <i class="cdp cdp-badge cdp-2x"></i>
          <span class="text-menu">{{t 'Cursos'}}</span>
        </a>
      </li>

      <li>
        <a class="navbar-menu-item item-feed" href="#">
          <i class="cdp cdp-message cdp-2x"></i>
          <span class="text-menu">{{t 'Mensagem'}}</span>
        </a>
      </li>
      <li>
        {{#link-to 'notifications' classNames="navbar-menu-item item-notifications"}}
          <i class="cdp cdp-bell cdp-2x cdp-align-justify"></i>
          <span class="text-menu">{{t 'Notificações'}}</span>
        {{/link-to}}
      </li>

      <li id="search-main" class="search">
        <form class="form-inline" role="form">
          <div class="form-group">
            <input type="search" class="search-input form-control" placeholder="O que você procura?">
          </div>
          <button type="submit" class="btn btn-success">
            <i class="fa fa-search"></i>
          </button>
        </form>
      </li>
    </ul>
    <!-- /Menu main -->

    <!-- Menu User #menu-user-dropdown
         only on login -->
    <ul class="nav navbar-nav pull-right">
      {{#unless isAuthenticated}}
        <li id="menu-user-dropdown" class="dropdown">
          <a class="navbar-login-button navbar-btn dropdown-toggle" data-toggle="dropdown">
            {{t Entrar}}<div style="margin-left: 0.5em;" class="caret"></div>
          </a>
          <ul id="dropdown-login-menu" class="dropdown-menu dropdown-menu-right arrow_box" role="menu">
            <!-- FORM LOGIN -->
            {{we-auth-modal-login}}
            <!-- /FORM LOGIN -->
          </ul>
        </li>

      {{/unless}}

      {{render 'user/usermenu' App.currentUser controller='UserMenu'}}
    </ul>
    <!-- /Menu User -->

    <div class="bar-colored"></div>
  </div><!-- end container -->
</nav><!-- end navigation #navbarmain -->
