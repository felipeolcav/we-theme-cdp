<nav id="navbar-main" class="navbar-default" role="navigation">
  <div class="container">

    <div class="navbar-header">
      <!-- Toggle button
          for mobile devices -->
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <!-- /Toggle button -->

      <!-- Logo -->
      {{#link-to 'home' classNames="app-main-logo navbar-brand"}}
        <img src="/theme/assets/img/cdp-logo.png" alt="Comunidade de Práticas"/>
      {{/link-to}}

      <!-- /Logo -->
    </div>

    <!-- Menu main -->
    <ul id="menu-main" class="nav navbar-nav">
      <li>
        {{#link-to 'users' classNames="navbar-menu-item item-people"}}
          <div class="icon icon-people"></div>
          <span class="text-menu">{{t 'Pessoas'}}</span>
        {{/link-to}}
      </li>
      <li>
        <a class="navbar-menu-item item-feed" href="#">
          <div class="icon icon-message"></div>
          <span class="text-menu">{{t 'Mensagem'}}</span>
        </a>
      </li>
      <li>
        {{#link-to 'groups' classNames="navbar-menu-item item-group"}}
          <div class="icon icon-cdp-logo"></div>
          <span class="text-menu">{{t 'Comunidades'}}</span>
        {{/link-to}}
      </li>
      <li>
        <a class="navbar-menu-item item-course" href="#">
          <div class="icon icon-badge"></div>
          <span class="text-menu">{{t 'Cursos'}}</span>
        </a>
      </li>
      <li>
        {{#link-to 'notifications' classNames="navbar-menu-item item-notifications"}}
          <div class="icon icon-bell"></div>
          <span class="text-menu">{{t 'Notificações'}}</span>
        {{/link-to}}
      </li>
      <li class="search" style="position: relative; top: 1.2em; left: 2em;">
        <form class="form-inline" role="form">
          <div class="form-group">
            <input type="search" class="form-control" placeholder="Buscar" style="background: #f2f2f2; border-color: #f2f2f2">
          </div>
          <button type="submit" class="btn btn-success">
            <div class="icon icon-search"></div>
          </button>
        </form>

      </li>
    </ul>
    <!-- /Menu main -->

    <!-- Menu User #menu-user-dropdown
         only on login -->
    <ul class="nav navbar-nav pull-right">
      {{#if isAuthenticated}}
      
        {{we-connection-status}}

        {{else}}
        <li id="menu-user-dropdown" class="dropdown">
          <button class="btn btn-primary navbar-login-buttom navbar-btn dropdown-toggle" data-toggle="dropdown">
            {{t Entrar}}<span class="caret"></span>
          </button>
          <ul class="dropdown-menu dropdown-menu-right" role="menu" style="margin-top: 1.5em">
            <!-- FORM LOGIN -->
            {{we-auth-modal-login}}
            <!-- /FORM LOGIN -->
          </ul>
        </li>
      {{/if}}

      {{render 'user/usermenu' App.currentUser controller='UserMenu'}}
    </ul>
    <!-- /Menu User -->

    <div class="bar-colored"></div>
  </div><!-- end container -->
</nav><!-- end navigation #navbarmain -->

