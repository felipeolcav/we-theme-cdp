<!-- Splash Global
    Use for welcome to user -->
<section id="splash-global" class="section">
  <div class="container">

    {{#if isAuthenticated}}
      <div class="timeline-wrapper">
        <h3>{{t 'Timeline'}} <small><br>{{t 'Acompanhe o que acontece na rede'}}</small></h3>
        <div id="user-list">
          {{render 'post/sharebox' postNew}}
          {{render 'posts/list' posts controller='Posts'}}
        </div>
      </div>

      <div id="draggable-widgets">
        <!-- widgets -->
        {{partial 'partials/feed-widget'}}

        {{partial 'partials/group-widget'}}

        {{partial 'partials/course-widget'}}
        <!-- /widgets -->
      </div>
    {{else}}
      <div class="home-logged-out">
        {{partial 'partials/home-about-site'}}

        {{#link-to 'authRegister' classNames="btn btn-lg btn-primary" role="button"}}

          {{t 'Cadastre-se'}}
        {{/link-to}}
      </div>
    {{/if}}

  </div><!-- end container -->
</section><!-- end splash global -->
