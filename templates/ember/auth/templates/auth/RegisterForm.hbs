
{{#if isVisible}}
<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h2 id="myModalLabel">{{t "Cadastre-se"}}</h2>
      </div>

      <div class="modal-body">
      <form id="form-signin" class="form-horizontal user-signup-form" role="form" {{action "submit" on="submit"}} name="createAccountForm" method="POST">
        {{we-sys-messages messages=messages}}

        <!-- input: username -->
        <div class="form-group">
          {{input name="username" value=user.username  type="text" placeholder=usernamePlaceholder required="true" classNames="form-control input-lg"}}
        </div>
        <!-- /input: username -->

        <!-- input: email -->
        <div class="form-group">
          {{input name="email" value=user.email  type="email" placeholder=emailPlaceholder classNames="form-control input-lg" required="true"}}
          <div class="message">
            <div class="message.type">{{message.message}}</div>
          </div>
        </div>
        <!-- /input: email -->

        <!-- input: password -->
        <div class="form-group">
          <div class="input-group col-xs-12 pull-left">
            {{input name="password" value=user.password  type="password" placeholder=passwordPlaceholder required="true" classNames="form-control input-lg"}}
          </div>

          <div class="input-group col-xs-10 pull-right">
            <!-- input: confirm-password -->
            {{input name="confirmPassword" value=user.confirmPassword  type="password" placeholder=confirmPasswordPlaceholder required="true" classNames="form-control input-lg"}}
            <!-- /input: confirm-password -->
          </div>
        </div>
        <!-- /input: password -->

        <div class="form-group">
          <div class="input-group">
            <label for="language" class="input-group-addon">
              <span class="glyphicon glyphicon-globe"></span> {{t 'Language'}}
            </label>
            {{view Ember.Select name="language" value=user.language content=defaultlanguages classNames="form-control input-md"}}
          </div>
        </div>


      {{we-sys-messages messages=messages}}

        <div class="form-group">
          <div class="col-xs-8 row" style="position: relative;">
            <select class="form-control">
              <option>Mês</option>
              <option>2</option>
              <option>3</option>
              <option>4</option>
              <option>5</option>
            </select>
          </div>
          <div class="col-xs-8 row" style="position: relative; left: 1em;">
            <select class="form-control">
              <option>Dia</option>
              <option>2</option>
              <option>3</option>
              <option>4</option>
              <option>5</option>
            </select>
          </div>
          <div class="col-xs-8 row" style="position: relative; left: 2em;">
            <select class="form-control">
              <option>Ano</option>
              <option>2</option>
              <option>3</option>
              <option>4</option>
              <option>5</option>
            </select>
          </div>
        </div>
        <div class="form-group">
          <div class="radio col-xs-8 row">
            <label>
              <input type="radio" name="optionsRadios" id="optionsRadios1" value="male">
              Masculino
            </label>
          </div>
          <div class="radio col-xs-12">
            <label>
              <input type="radio" name="optionsRadios" id="optionsRadios1" value="female">
              Feminino
            </label>
          </div>
        </div>

        <div class="form-group">
          <div class="col-xs-16 row">
            <button type="submit" class="col-xs-24 btn btn-success">{{t "Cadastrar"}}</button>
          </div>
        </div>

      </form>
</div><!-- /modal-body -->




<div class="modal-footer">
  <div class="form-group row" style="font-size: 11px;">
    <div class="radio col-xs-24 row" style="text-align: left">
      <label>
        <input type="checkbox" name="optionsRadios" id="optionsRadios1" value="male" checked>
        Li e aceito as regras de convivência da Comunidade de Práticas.*
      </label>
    </div>
    <div class="radio col-xs-24 row" style="text-align: left">
      <label>
        <input type="checkbox" name="optionsRadios" id="optionsRadios1" value="female" checked>
        Li e aceito os termos de uso*
      </label>
    </div>


    <div class="input-group">
      <div class="agree-terms">
        {{t "By clicking Sign Up, you agree to: We dont are responsible for anything that may happens to your data in this test system"}}
      </div>
    </div>

  </div>
</div>



        </div>
      </div>


    </div>
  </div>
</div><!-- modal -->
{{/if}}
