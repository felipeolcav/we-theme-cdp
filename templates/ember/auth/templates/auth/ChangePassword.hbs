<section class="section">
  <div class="container">

    {{partial "partials/breadcrumb" }}
    
    <div class="pull-right col-xs-17">
      <h3 class="title-icon">
        <span class="icon icon-cdp-logo icon-circle icon-circle-blue"></span>
        <span class="title">{{t "Mudar senha"}}</span>
        <small class="subtitle">{{t 'Mude sua senha'}}</small>
      </h3>

      {{we-sys-messages messages=messages}}

      <div id="group-list" class="row">
        <form  {{action "submit" on="submit"}} name="changePasswordForm" class="user-signup-form" method="POST">
          <!-- input: oldpassword -->
          <div class="form-group">
            {{input name="oldpassword" value=user.oldpassword  type="password" placeholder=oldpasswordPlaceholder required="true" classNames="form-control input-lg"}}
          </div>
          <!-- /input: oldpassword -->

          <!-- input: password -->
          <div class="form-group">
            {{input name="password" value=user.password  type="password" placeholder=passwordPlaceholder required="true" classNames="form-control input-lg"}}
          </div>
          <!-- /input: password -->

          <!-- input: repeatpassword -->
          <div class="form-group">
            {{input name="repeatpassword" value=user.repeatpassword  type="password" placeholder=passwordPlaceholder required="true" classNames="form-control input-lg"}}
          </div>
          <!-- /input: repeatpassword -->

          {{we-sys-messages messages=messages}}

          <div class="form-group">
            <button class="btn btn-lg btn-success " type="submit">
              {{t "Mudar"}}
            </button>
          </div>

        </form>
      </div>
    </div>

  </div><!-- end container -->
</section><!-- end -->
