<form id="form-login" class="form-horizontal col-xs-20" role="form">
  <div class="form-group">
    <div class="input-group col-xs-24">
      <input type="email" class="form-control" id="inputEmail" placeholder="E-mail / Usuário">
    </div>
  </div>
  <div class="form-group">
    <div class="input-group col-xs-24">
      <input type="password" class="form-control" id="inputPassword" placeholder="Senha">
    </div>
  </div>
  <div class="form-group">
    <div class="checkbox col-xs-16 row">
      <label>
        <input type="checkbox"> Lembrar-me
      </label>
      <a href="#recovery-password">Recuperar senha</a>
    </div>
    <div class="col-xs-12 pull-right row">
      <button type="submit" class="col-xs-24 btn btn-sm btn-success">Entrar</button>
    </div>

    <div class="container-button-signin col-xs-24">
      <div class="row">
        <li class="divider"></li>
        <button type="submit" class="col-xs-24 btn btn-sm btn-primary">Criar nova conta</button>
      </div>
    </div>
  </div>
</form>









<!-- Modal -->
<div class="modal" id="AuthLoginModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">

<form class="form center-block" role="form" name="loginForm" method="post" {{action "login" on="submit"}}>

<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-hidden="true" ng-click="closeModal()">×</button>
  {{t "Login Form"}}
</div>

<div class="modal-body">
  {{we-sys-messages messages=messages}}

  <!-- form-login -->
  <div class="form-login" data-ng-controller="LoginCtrl" data-ng-hide="authorized">
      <div class="form-group">
        <label class="sr-only">{{t 'Email address'}}</label>
        {{input name="email" value=controller.email  type="email" placeholder=controller.emailPlaceholder classNames="form-control input-lg"}}
      </div>

      <div class="form-group">
        <label class="sr-only">{{t "Password"}}</label>
        {{input value=controller.password type="password" placeholder=controller.passwordPlaceholder classNames="form-control input-lg"}}
      </div>

    <p class="login-form-links">
      <a {{action goToForgotPaswordPage}} class="link" href="/auth/forgot-password">
        <span class="glyphicon glyphicon-question-sign"></span>
        {{t "Forgot password?"}}
      </a>
      |
      <a {{action goToRegisterPage}} class="link" href="/auth/reset-password">
        <span class="glyphicon glyphicon-log-in"></span> {{t "Register"}}
      </a>
    </p>

  </div>
  <!-- /form-login -->

</div>

<div class="modal-footer">

<div class="row">
  <div class=" col-sm-6">
    <button id="loginButton" class="pull-left btn btn-primary" type="submit">{{t "Sign in"}}</button>
  </div>
</div>

</form>


    </div>
  </div>
</div>
