<div class="form-group">
  {{we-wysiwyg-editor name="body" value=body onPaste="onPasteInBody"}}
</div>

{{#if selectingAttachOption}}
<div class="form-group attach-options">
  <button {{action 'openShareImage'}} type="button" class="btn btn-info" title="Imagem">
    <i class="fa fa-image"></i>
  </button>
  <button {{action 'openShareAudio'}} type="button" class="btn btn-warning" title="Áudio">
    <i class="fa fa-music"></i>
  </button>
  <button {{action 'openShareVideo'}} type="button" class="btn btn-danger" title="Vídeo">
    <i class="fa fa-video-camera"></i>
  </button>
  <button {{action 'openShareDocs'}} type="button" class="btn btn-success" title="Documento">
    <i class="fa fa-file-text"></i>
  </button>
  <button {{action 'openShareLinks'}} type="button" class="btn btn-primary" title="Link">
    <i class="fa fa-link"></i>
  </button>
</div>
{{/if}}

<div class="form-group">
  <div class='row'>
  {{#each videos}}
    <div class='col-md-6'>
      {{we-video-preview url=this onRemove="onRemoveVideo"}}
    </div>
  {{/each}}
  </div>
</div>

{{#if shareImages}}
  <div class="form-group">
    <div class="form-group row add-images">
      <label for="addImages" class="col-sm-2 control-label">{{t "Attach images"}}</label>
      <div class="col-sm-10">
        {{image-upload files=filesNew}}
      </div>
    </div>
  </div>
{{/if}}
<div class="form-group images-preview">
  <div class="row">
    {{#each files}}
      <div class="col-xs-6 col-md-3">
        {{we-image-preview file=this onRemove='onRemoveImage'}}
      </div>
    {{/each}}

    {{#each images}}
      <div class="col-xs-6 col-md-3">
        {{we-image file=this click='onRemoveSalvedImage'}}
      </div>
    {{/each}}
  </div>
</div>

<div class="footer">
  <div class="form-group">
    <div class="input-group">
      <label for="toId" class="input-group-addon">{{t "To"}}:</label>
      {{we-select2 shareWithOptions=App.currentUser.shareWithOptions shareWithUsers=sharedWith  shareInGroups=sharedWith}}
    </div>
  </div>

  <div class="actions">
    <button type="submit" class="btn btn-info">
      <span class="fa fa-share"></span> {{t "Compartilhar"}}
    </button>
    <button type="button" {{action 'cancel'}} class="btn btn-danger">
      <i class="fa fa-close"></i>
      {{t "Cancelar"}}
    </button>
  </div>
</div>
