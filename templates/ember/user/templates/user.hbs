<section class="section">
  <div class="container user-profile">

    {{bread-crumbs}}

    <div class="row">
      <div class="col-md-3">
      
        <div class="avatar-large">{{we-avatar userId=user.id size="responsive"}}</div>

        <div class="user-profile-edit">
          {{#if isEditing}}
            <div class="form-group">
              {{view Ember.Select name="language" value=user.language content=defaultlanguages classNames="form-control input-md"}}
            </div>
          {{else}}
            <div class="language-area text-center">{{user.language}}</div>
          {{/if}}

          {{#can editUser model.user}}
            <div class="user-admin-actions-area">
              <div class="actions">
                {{!--
                <button {{action 'save'}} type="button" class="btn btn-xs btn-success">
                  <i class="fa fa-saved"></i> {{t 'Save'}}
                </button>

                <button {{action 'cancel'}} type="button" class="btn btn-xs btn-warning">
                  <i class="fa fa-unchecked"></i> {{t 'Cancel'}}
                </button>

                <button {{action 'edit'}} type="button" class="btn btn-xs btn-primary">
                  <i class="fa fa-edit"></i> {{t 'Edit'}}
                </button>

                --}}

                <button class="btn btn-warning">Seguir</button>

                <button class="btn btn-warning">Editar</button>

              </div>
            </div>
          {{/can}}

        </div>

        <div id="group-icons">
          <ul>
            <li class="group-icon-like"><i class="cdp cdp-love"></i></li>
            <li class="group-icon-access"><i class="icons-outline icons-outline-padlock-closed"></i></li>
            <li class="group-icon-follow"><i class="icons-outline icons-outline-eye"></i></li>
          </ul>
        </div>

        <div class="user-profile-actions">
          {{#if showSocialActions}}
            {{view App.ContactButtomView contactStatus=contactStatus}}
            {{we-follow model='user' modelId=user.id flagText="Seguir" }}
          {{/if}}
        </div>

        {{partial 'partials/feed-sidebar-widget'}}

        {{partial 'partials/group-sidebar-widget'}}

        {{partial 'partials/course-sidebar-widget'}}

        <aside id="favs" class="widget-fav widget">
          <h3><i class="cdp cdp-report"></i>Relatos Favoritos</h3>
          <div class="filter">
            <select>
              <option>Relatos</option>
              <option>opt 1</option>
              <option>opt 2</option>
              <option>opt 3</option>
            </select>
          </div>
          <div class="content">
            <a href="#">
            <img src="http://dummyimage.com/243x184/efefef/787878.jpg&text=relato">
            <p>Campanha "Dentinho Sadio Sorriso Legal"</p>
            </a>
          </div>
        </aside>

        <aside id="related-users" class="widget-user-list widget">
          <h3>Membros Relacionados</h3>

          <div class="content user-list">
            
              <a class="user-list-user" href="#">
                <span class="img-wrapper"><img class="img-circle" heigth="100" width="100" userid="1" src="http://localhost:1430/avatar/1?style=medium"></span>
                <h4 class="nome">marcusvbp</h4>
              </a>
              <a class="user-list-user" href="#">
                <span class="img-wrapper"><img class="img-circle" heigth="100" width="100" userid="1" src="http://localhost:1430/avatar/1?style=medium"></span>
                <h4 class="nome">marcusvbp</h4>
              </a>
              <a class="user-list-user" href="#">
                <span class="img-wrapper"><img class="img-circle" heigth="100" width="100" userid="1" src="http://localhost:1430/avatar/1?style=medium"></span>
                <h4 class="nome">marcusvbp</h4>
              </a>
              <a class="user-list-user" href="#">
                <span class="img-wrapper"><img class="img-circle" heigth="100" width="100" userid="1" src="http://localhost:1430/avatar/1?style=medium"></span>
                <h4 class="nome">marcusvbp</h4>
              </a>
            
          </div>
        </aside>

      </div>
      
      <div class="col-md-9">


        <header id="user--header" class="section-header">
          <div class="header-brand">
            <div class="header-brand-icon">
              <span class="fa-stack">
                <i class="fa fa-user cdp-lg cdp-stack-1x cdp-inverse"></i>
              </span>
            </div>
            <div class="header-brand-text">
              <h3 class="header-brand-text--title">
              {{!-- t 'user.activity.title'--}} 
                {{t 'user.sidebar.username' usernameBinding=user.displayName}}
              </h3>
              <small class="header-brand-text--small">
                {{t 'user.activity.subtitle'}}
              </small>
            </div>
          </div>

          <div class="header-info">
            <div class="local"><b>Local</b>: Rio de Janeiro, RJ</div>
            <div class="area"><b>√Årea</b>: Enfermagem</div>
            <div class="about">
              <p>Holisticly deliver high-payoff partnerships after distinctive intellectual capital. Conveniently monetize customer directed convergence for reliable e-markets. Enthusiastically plagiarize multifunctional benefits after functionalized methods of empowerment. Interactively aggregate B2C human capital after goal-oriented innovation. Competently cultivate emerging action items before magnetic internal or "organic" sources.</p>
            </div>
          </div>

          <a href="#" class="about-group btn">Sobre <span class="caret"></span></a>

        </header>

        {{!--- 
        <div class="user-profile-menu-area text-center">
          <ul class="user-profile-menu nav nav-pills pull-right">
            <li>
            {{#link-to 'user' user.id classNames='btn btn-success'}}
              {{t 'user.menu.activity.link'}}
            {{/link-to}}
            </li>
            <li>
            {{#link-to 'user.contacts' user.id classNames='btn btn-primary'}}
              {{t 'user.menu.contacts.link'}}
            {{/link-to}}
            </li>
            <li>
            {{#link-to 'user.images' user.id classNames='btn btn-warning'}}
              {{t 'user.menu.imagens.link'}}
            {{/link-to}}
            </li>
          </ul>
        </div>
        --}}

        
        {{outlet}}

      </div>

    </div>


  </div><!-- /container -->
</section><!-- end -->
