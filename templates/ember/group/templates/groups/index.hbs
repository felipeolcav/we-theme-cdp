<section class="section">
  <div class="container">
    {{partial "partials/breadcrumb" }}
    <div class="row">

      <div id="draggable-widgets">
        <div id="group-picture">
          <img src="http://dummyimage.com/212x119/cccccc/666666.gif&text=Figura+da+Comunidade" alt="nome da comunidade">
        </div>
        <div id="group-icons">
          <ul>
            <li class="group-icon-like"><i class="cdp cdp-love"></i></li>
            <li class="group-icon-access"><i class="icons-outline icons-outline-padlock-open"></i></li>
