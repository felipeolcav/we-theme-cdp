<section class="section">
  <div class="container">

    <div id="draggable-widgets" class="pull-left col-xs-6">
      <!-- widgets -->
      <aside id="four-widget" class="panel panel-default row">
        <div class="panel-heading">
          <h3 class="panel-title">
            <a class="widget-trigger-collapse" data-toggle="collapse" data-parent="#accordion" href="#collapseFour">
              <div class="icon icon-logo-cdp pull-left"></div>
              {{#link-to 'group' id}}
                {{name}}
              {{/link-to}}
            </a>
          </h3>
        </div>
        <div id="collapseFour" class="panel-collapse collapse in list-group">

          <div class="list-group-item">



            <div class="search-in-group">
              <form {{action 'search' on="submit"}}>
                <div class="input-group">
                  <div class="input-group-btn">
                  <button class="btn btn-default"><i class="icon icon-search"></i></button>
                  </div>
                  <input type="text" class="form-control" placeholder="Buscar">
                </div>
              </form>
            </div>

            {{#link-to 'group' id}}
              <img width="100%" src="/imgs/logos/group2.jpg">
            {{/link-to}}

            {{partial 'group/groupActionsBlock'}}
          </div>
        </div>
      </aside>

      {{partial 'partials/feed-widget'}}

      {{partial 'partials/group-widget'}}

      {{partial 'partials/course-widget'}}

    </div>

    <div class="col-xs-18 pull-right">
      {{outlet}}
    </div>

  </div><!-- /container -->
</section>
