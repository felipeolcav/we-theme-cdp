<section class="section">
  <div class="container">

    {{outlet}}

    <div id="draggable-widgets">
      <!-- widgets -->
      <aside id="four-widget" class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">
            <a class="widget-trigger-collapse" data-toggle="collapse" data-parent="#accordion" href="#collapseFour">
              {{#link-to 'group' id}}
                {{name}}
              {{/link-to}}
            </a>
          </h3>
        </div>
        <div id="collapseFour" class="panel-collapse collapse in list-group">

          <div class="list-group-item">
            {{#link-to 'group' id}}
              <img width="100%" src="/imgs/logos/group2.jpg">
            {{/link-to}}

            {{partial 'group/groupActionsBlock'}}
          </div>
        </div>
      </aside>

      {{partial 'partials/feed-widget'}}

      {{partial 'partials/group-widget'}}

      {{partial 'partials/course-widget'}}

    </div><!-- /draggable-widgets -->

  </div><!-- /container -->
</section>
