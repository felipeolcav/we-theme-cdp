<form role="form" {{action "submit" on="submit"}}>

<div class="panel panel-default">
  <div class="panel-heading">
    <h4>{{t 'Create group'}}</h4>
  </div>
  <div class="panel-body">

    <div class="row"><div class="col-lg-12">
      <div class="form-group">
        <div class="input-group">
          <label for="name" class="input-group-addon">{{t 'Group name'}}</label>
          {{input id="name" name="name" value=group.name type="text" placeholder="Enter group name" required="true" classNames="form-control"}}
        </div>
      </div>
      <div class="form-group">
        <div class="input-group">
          <label for="privacity" class="input-group-addon">
            <span class="glyphicon glyphicon-lock"></span>
            {{t 'Privacity'}}
          </label>
          {{view "select" name="Privacity" value=group.privacity optionValuePath="content.value" optionLabelPath="content.label" content=privacityList classNames="form-control"}}
        </div>
      </div>
    </div><!-- /col-lg-12 --></div><!-- /row -->

    {{#if imageSelected}}
      {{we-image-crop src=salvedImage.urls.original file=salvedImage data=cropImageData}}
    {{else}}
      <div class="row">
        <div class="col-lg-9">
          <div class="input-group">
            <span class="input-group-addon">
              <label for="image">{{t 'Group image'}}</label>
            </span>
            {{image-upload multiple="false" files=files classNames="form-control"}}
          </div><!-- /input-group -->
        </div><!-- /.col-lg-6 -->
        <div class="col-lg-3">
          <div class="input-group">
            <button class="btn btn-primary" type="buttom" {{action 'selectFile'}}>Selecionar imagem</button>
          </div><!-- /input-group -->
        </div><!-- /.col-lg-6 -->
      </div><!-- /.row -->
    {{/if}}
  </div>
  <div class="panel-footer">
     <button class="btn btn-primary" type="buttom" {{action 'cropAndSave'}}>Salvar grupo</button>
  </div>
</div>
</form>