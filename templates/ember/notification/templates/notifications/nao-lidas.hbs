<section class="section">
  <div class="container">

    {{partial "partials/breadcrumb" }}

    <div id="notifications-list">
      <h3 class="title-icon">
        <span class="fa-stack">
          <i class="fa fa-circle fa-stack-2x pull-left"></i>
          <i class="cdp cdp-bell cdp-lg cdp-stack-1x cdp-inverse"></i>
        </span>
        <span class="title">{{t 'Notificações'}}</span>
        <small class="subtitle">{{t 'Visualize suas notificações'}}</small>
      </h3>

      <button {{action 'markAllAsRead'}} class="btn btn-sm btn-primary">Marcar todas como lido</button>

      <table class="table table-striped table-hover">
        <tbody>
          {{#each controller}}
            {{render 'notifications/item' this}}
          {{else}}
          <tr>
            <td colspan="3">
              <div class="jumbotron text-center">
                {{t 'Nenhuma notificação nova'}}
              </div>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div><!-- /#notifications-list -->

    <div id="draggable-widgets">
      <!-- widgets -->
      {{partial 'partials/feed-widget'}}

      {{partial 'partials/group-widget'}}

      {{partial 'partials/course-widget'}}
      <!-- /widgets -->
    </div>

  </div><!-- end container -->
</section><!-- end -->
