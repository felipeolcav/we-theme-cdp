<!-- /notification-list--header- -->
<header id="notification-list--header">
  <div class="notification-list--header-brand">
    <div class="notification-list--header-brand-icon">
      <span class="fa-stack">
        <i class="fa fa-circle fa-stack-2x fa-4x pull-left icon-circle-group"></i>
        <i class="cdp cdp-bell cdp-lg cdp-stack-1x cdp-inverse"></i>
      </span>
    </div>
    <div class="notification-list--header-brand-text">
      <h3 class="notification-list--header-brand-text--title">
        {{t 'notifications.title'}}
      </h3>
      <small class="notification-list--header-brand-text--small">
        {{t 'notifications.subtitle'}}
      </small>
    </div>
  </div>
  <!-- notification-list--header-search -->
  <div class="notification-list--header-search">
    <form class="form-inline" role="form">
      <div class="input-group">
        <input type="search" class="notification-list--header-search-input form-control" placeholder="Busque nesta seção">
        <span class="input-group-btn">
          <button class="btn btn-default" type="button">
            <i class="fa fa-search"></i>
          </button>
        </span>
      </div>
    </form>
  </div>
  <!-- /notification-list--header-search -->
</header>
<!-- /group-list--header -->
