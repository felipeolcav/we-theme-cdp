<form id="form-login" class="form-horizontal col-xs-10" role="form">
  <div class="form-group">
    <div class="input-group col-xs-12">
      <input type="email" class="form-control" id="inputEmail" placeholder="Email / Username">
    </div>
  </div>
  <div class="form-group">
    <div class="input-group col-xs-12">
      <input type="password" class="form-control" id="inputPassword" placeholder="Password">
    </div>
  </div>
  <div class="form-group">
    <div class="checkbox col-xs-8 row">
      <label>
        <input type="checkbox"> Remember me
      </label>
    </div>
    <div class="col-xs-6 pull-right row">
      <button type="submit" class="col-xs-12 btn btn-sm btn-success">Sign in</button>
    </div>
  </div>
</form>
